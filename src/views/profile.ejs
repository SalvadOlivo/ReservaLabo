<% include partials/head %>

<title>Perfil</title>
</head>
<body>
        <div class="container">
          <header class="text-center">
            <h1>Profile Page</h1>
            <a href="/formulario" class="btn btn-light btn-sm">
              Formulario
            </a>
          </header>
          <hr>
          <div class="container">
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <h3 class="card-title"><span class="fa fa-user"></span> Local</h3>
                  <p>
                    <strong>id</strong> : <%= user._id %> <br>
                    <strong>nombre</strong> : <%= user.nombre %> <br>
                    <strong>rol</strong> : <%= user.rol %> <br>
                    <strong>usuario</strong> : <%= user.username %> <br>
                    <strong>password</strong> : <%= user.password %>
                  </p>
                  <a href="/logout" class="btn btn-light btn-sm">
                    Logout
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </body>