<% include partials/head %>
<link rel="stylesheet" href="css/style2.css">
<title>Formulario</title>
</head>

<body>
    <div class="container-content">
        <header>
            <nav>
                <div id="navbarColor02">
                    <ul>
                        <li id="inicio">
                            <a class="btn btn-danger" href="index.html">Inicio<span class="sr-only"></a>
                        </li>

                        <li id="user">
                            <a class="btn btn-info" href="usuario.html">Usuario</a>
                        </li>

                        <li id="user">
                            <a class="btn btn-info" href="/calendario">ver calendario</a>
                        </li>
                    </ul>

                </div>
            </nav>
        </header>
        <main>
            <form action="/add" method="POST">
                <h2>Reserva de Laboratorio</h2>
                <div class="reserva container form-group">
                    <fieldset>
                        <div class="col-md-4 mb-3">
                            <label for="description"><b>Descripción: </b></label>
                            <textarea class="form-control" id="description" rows="3" name="description"
                                required></textarea>

                            <label for="name_lab"><b>Laboratorio: </b></label>
                            <select name="name_lab" id="lab_choose" class="form-control" required>
                                <option>Laboratorio 1</option>
                                <option>Laboratorio 2</option>
                                <option>Laboratorio 3</option>
                                <option>Laboratorio 4</option>
                                <option>Laboratorio 5</option>
                                <option>Laboratorio 6</option>
                                <option>Laboratorio 7</option>
                            </select>

                            <label for="fecha_i"><b>Fecha inicio: </b></label>
                            <input class="form-control" type="date" name="fecha_i" required
                                pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">

                            <label for="duracion"><b>Duración (cantidad de horas): </b></label>
                            <input class="form-control" type="number" name="duracion" min="1" required>

                            <label for="fecha_f"><b>Fecha fin: </b></label>
                            <input class="form-control" type="date" name="fecha_f" required
                                pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">

                            <label for="psw"><b>Tipo: </b></label>
                            <input class="form-control" type="text" name="tipo" required>

                            <label for="software"><b>Software requerido: </b></label>
                            <input class="form-control" type="text" name="software" required>

                            <label for="numero_personas"><b>Numero de personas: </b></label>
                            <input class="form-control" type="number" min="1" name="numero_personas" required>

                            <label for="repeticion"><b>Repetición: </b></label>
                            <br>
                            <form action="" class="form-group" id="campos_repetition">
                                <label for="type_reserva"><b>Tipo: </b></label>
                                <select name="type_reserva" id="type_reserva_choose" class="form-control">
                                    <option>Diaria</option>
                                    <option>Semanal</option>
                                    <option>Mensual</option>
                                </select>

                                <label for="day_repetition"><b>Día: </b></label>
                                <select name="day_repetition" id="day_reserva_choose" class="form-control">
                                    <option>Lunes</option>
                                    <option>Martes</option>
                                    <option>Miércoles</option>
                                    <option>Jueves</option>
                                    <option>Viernes</option>
                                    <option>Sábado</option>
                                </select>

                                <label for="num_semanas_repetition"><b>Número de semanas entre repetición: </b></label>
                                <input type="number" class="form-group" min="1" name="num_semanas_repetition">

                                <label for="date_ultimate"><b>Fecha Tope Repetición: </b></label>
                                <input type="date" class="form-control" name="date_ultimate">
                            </form>

                            <br>
                            <button class="btn btn-outline-success" type="submit">Guardar</button>
                        </div>
                    </fieldset>
                </div>
            </form>
        </main>
    </div>
</body>

</html>