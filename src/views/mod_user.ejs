<% include partials/head %>
<title>Registro</title>
<link rel="stylesheet" href="/css/style2.css" type="text/css">
</head>
<body>
    <% include partials/navbar %>
<div class="container">
  <div class="col-sm-6 mx-auto">
    <div class="card mt-5">
      <div class="card-body">
        <!-- messages -->
        <h1 class="text-center">
          <span class="fas fa-user-edit"></span> Modificar
        </h1>
        <!-- form -->
        <form action="/edit/<%= user._id %>" method="post">
          <div class="form-group">
            <label for="nnombre">Nombre: <%= user.nombre %></label>
          </div>
          <div class="form-group">
              <label for="username">Usuario: <%= user.username %></label>
          </div>
          <div class="form-group">
            <label for="email">Email: <%= user.email %></label>
        </div>
          <div class="form-group">
            <label for="rol">Rol: </label>
            <select name="rol" id="change_rol_choose" class="form-control only-admin">
                <option>Estudiante</option>
                <option>Invitado</option>
                <option>Profesor</option>
                <option>Mantenimiento</option>
                <option>Ordenanza</option>
                <option>Responsable</option>
            </select>
          </div>
          <input type="submit" class="btn btn-dark btn-lg">
        </form>
        <hr>
      </div>
    </div>
  </div>
</div>
</body>
</html>