<% include partials/head %>
<title>Perfil</title>
<link rel="stylesheet" href="/css/style2.css" type="text/css">
</head>
<body>
    <div class="col-sm-6">
        <div class="card">
          <div class = "card-body">
            <h3 class = "card-title"><i class="fa fa-users"></i> Usuarios registrados </h3>
            <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>id</th>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th>Edicion</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < users.length; i++){ %>
                    <tr>
                        <td><%= users[i]._id %></td>
                        <td><%= users[i].username %></td>
                        <td><%= users[i].rol %></td>
                        <td>
                          <a href="/edit/<%= users[i]._id %>" class="btn btn-info"> Editar </a>
                        </td>
                    </tr>
                  <% } %>
          </div>
        </div>
    </div>
</body>
</html>
